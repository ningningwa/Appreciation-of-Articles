<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background7">

    <Button
        android:id="@+id/bitcoin"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="25dp"
        android:text="bitcoin"
        app:layout_constraintBottom_toTopOf="@+id/techCrunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headline" />

    <Button
        android:id="@+id/apple"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="25dp"
        android:shadowColor="#A8A8A8"
        android:text="apple"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/wallStreetJournal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/techCrunch" />

    <Button
        android:id="@+id/techCrunch"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="25dp"
        android:text="techCrunch"
        app:layout_constraintBottom_toTopOf="@+id/apple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bitcoin" />

    <Button
        android:id="@+id/wallStreetJournal"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="25dp"
        android:text="Wall Street Journal"
        app:layout_constraintBottom_toTopOf="@+id/topBusinessHeadline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apple" />

    <TextView
        android:id="@+id/headline"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="  POPULAR TECH/BUS JOURNAL"
        android:textSize="24sp"
        app:fontFamily="@font/merienda_one"
        app:layout_constraintBottom_toTopOf="@+id/bitcoin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/topBusinessHeadline"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="211dp"
        android:text="Top Business Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallStreetJournal" />
</android.support.constraint.ConstraintLayout>